<% layout('layouts/boilerplate') %>
<div class="row">
<div class="col-8 offset-2">
<h4>Create a New Listing</h4>
<form method="POST" action="/listings" novalidate class="needs-validation">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="Enter title" type="text" class="form-control " required>
        <div class="valid-feedback">Title looks good</div>
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
        <div class="invalid-feedback">Please Enter a short description</div>
    </div>
    <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input name="listing[image][url]" placeholder="Enter image URL/LINK" class="form-control form-control-sm" >
    </div>
    <div class="row">
        <div class="mb-3 col-md-6">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="Enter price"  class="form-control form-control-sm" required>
            <div class="invalid-feedback">Price Should be valid</div>
        </div>
        <div class="mb-3 col-md-6 ">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Enter your location" class="form-control form-control-sm" required>
            <div class="invalid-feedback">Location Should be valid</div>
        </div>
    </div>
    <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" placeholder="Enter your country" class="form-control form-control-sm" required>
        <div class="invalid-feedback">Country Should be valid</div>
    </div>
    <button class="btn btn-dark add-btn">Add</button>
</form>
</div>
</div>