<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users Details</title>
    <style>
        table,th, td{
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <!-- Add this above your <table> in users.ejs -->
<a href="/users/new">
    <button type="button">Add User</button>
</a>
<br>
<br>
<hr>
    <table>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Username</th>
        </tr>
        <% for(user of users) {%>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.email %></td>
                <td><%= user.username %></td>
                <td>
                    <form method="get" action="/user/<%= user.id%>/edit">
                        <button>
                            Edit username
                        </button>
                        
                    </form>
                </td>
                <td>
                    
                        <a href="/user/<%= user.id %>/delete">
                            <button type="button">Delete</button>
                        </a>
                    
                </td>
            </tr>
        <% } %>    
    </table>
</body>
</html>